<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

<item>
    <shape android:shape="rectangle" >
        <solid android:color="@color/lecture_top" />
        <corners android:topLeftRadius="9dp" android:topRightRadius="9dp"/>
    </shape>
</item>

<item>
    <shape android:shape="rectangle" >
        <solid android:color="#1a000000" />
        <corners android:topLeftRadius="9dp" android:topRightRadius="9dp"/>
    </shape>
</item>

<item
    android:top="2dp"
    android:bottom="2dp"
    android:right="2dp"
    android:left="2dp">
    <shape android:shape="rectangle" >
        <solid android:color="@color/lecture_top" />
        <corners android:topLeftRadius="9dp" android:topRightRadius="9dp"/>
    </shape>
</item>

<item
    android:top="2dp"
    android:bottom="2dp"
    android:right="2dp"
    android:left="2dp">
    <shape android:shape="rectangle" >
        <gradient
            android:startColor="#00000000"
            android:endColor="#33000000"
            android:angle="270"/>
        <corners android:topLeftRadius="9dp" android:topRightRadius="9dp"/>
    </shape>
</item>

</layer-list>
