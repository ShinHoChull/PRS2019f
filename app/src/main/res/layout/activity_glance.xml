<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="glance"
            type="com.m2comm.prs2019f.views.GlanceActivity" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.m2comm.prs2019f.views.GlanceActivity">

        <com.m2comm.prs2019f.modules.customview.CustomFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/main_color_white">

            <!--*************Top start-->
            <com.m2comm.prs2019f.modules.customview.CustomFrameLayout
                android:id="@+id/fragment_C_Top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_color_darkblack"
                app:h="50" />

            <com.m2comm.prs2019f.modules.customview.CustomFrameLayout
                android:id="@+id/fragment_S_Top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_color_white"
                app:h="36" />

            <com.m2comm.prs2019f.modules.customview.CustomView
                android:visibility="gone"
                android:id="@+id/glance_SelectBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:h="100">

                <com.m2comm.prs2019f.modules.customview.CustomTextView
                    android:id="@+id/glance_month"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="Oct."
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    app:fontSize="17"
                    app:h="20" />

                <com.m2comm.prs2019f.modules.customview.CustomView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="50dp"
                    android:orientation="horizontal"
                    app:h="20">

                    <com.m2comm.prs2019f.modules.customview.CustomTextView
                        android:id="@+id/week1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Wed"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        app:fontSize="14"
                        app:h="20" />

                    <com.m2comm.prs2019f.modules.customview.CustomTextView
                        android:id="@+id/week2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Thu"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        app:fontSize="14"
                        app:h="20" />

                    <com.m2comm.prs2019f.modules.customview.CustomTextView
                        android:id="@+id/week3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Fri"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        app:fontSize="14"
                        app:h="20" />

                    <com.m2comm.prs2019f.modules.customview.CustomTextView
                        android:id="@+id/week4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Sat"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        app:fontSize="14"
                        app:h="20" />

                    <com.m2comm.prs2019f.modules.customview.CustomTextView
                        android:id="@+id/week5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Sun"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        app:fontSize="14"
                        app:h="20" />

                    <com.m2comm.prs2019f.modules.customview.CustomTextView
                        android:id="@+id/week6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Mon"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        app:fontSize="14"
                        app:h="20" />

                </com.m2comm.prs2019f.modules.customview.CustomView>

                <com.m2comm.prs2019f.modules.customview.CustomView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="50dp"
                    android:orientation="horizontal"
                    app:h="30">

                    <com.m2comm.prs2019f.modules.customview.CustomTextView
                        android:id="@+id/day1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="16"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        app:fontSize="15"
                        app:h="30" />

                    <com.m2comm.prs2019f.modules.customview.CustomTextView
                        android:id="@+id/day2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="17"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        app:fontSize="15"
                        app:h="30" />

                    <com.m2comm.prs2019f.modules.customview.CustomFrameLayout
                        android:id="@+id/day3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:h="30">

                        <com.m2comm.prs2019f.modules.customview.CustomView
                            android:id="@+id/day3_cir"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/glance_cirview"
                            app:h="30"
                            app:w="30" />

                        <com.m2comm.prs2019f.modules.customview.CustomTextView
                            android:id="@+id/day3_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="18"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            app:fontSize="15"
                            app:h="30" />

                    </com.m2comm.prs2019f.modules.customview.CustomFrameLayout>


                    <com.m2comm.prs2019f.modules.customview.CustomFrameLayout
                        android:id="@+id/day4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:h="30">

                        <com.m2comm.prs2019f.modules.customview.CustomView
                            android:id="@+id/day4_cir"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/glance_cirview"
                            app:h="30"
                            app:w="30" />

                        <com.m2comm.prs2019f.modules.customview.CustomTextView
                            android:id="@+id/day4_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="19"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            app:fontSize="15"
                            app:h="30" />

                    </com.m2comm.prs2019f.modules.customview.CustomFrameLayout>

                    <com.m2comm.prs2019f.modules.customview.CustomTextView
                        android:id="@+id/day5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="20"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        app:fontSize="15"
                        app:h="30" />

                    <com.m2comm.prs2019f.modules.customview.CustomTextView
                        android:id="@+id/day6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="21"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        app:fontSize="15"
                        app:h="30" />


                </com.m2comm.prs2019f.modules.customview.CustomView>


            </com.m2comm.prs2019f.modules.customview.CustomView>

            <com.m2comm.prs2019f.modules.customview.CustomView
                android:id="@+id/glance_SelectBox_type2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_color_gray"
                android:orientation="horizontal"
                android:visibility="gone"
                app:h="40">

                <com.m2comm.prs2019f.modules.customview.CustomView
                    android:id="@+id/bt1V"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    app:h="40">

                    <com.m2comm.prs2019f.modules.customview.CustomTextView
                        android:id="@+id/bt1_Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="10월18일(금)"
                        app:fontType="condensed"
                        app:h="39" />

                    <com.m2comm.prs2019f.modules.customview.CustomView
                        android:id="@+id/bt1_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />
                </com.m2comm.prs2019f.modules.customview.CustomView>

                <com.m2comm.prs2019f.modules.customview.CustomView
                    android:id="@+id/bt2V"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    app:h="40">

                    <com.m2comm.prs2019f.modules.customview.CustomTextView
                        android:id="@+id/bt2_Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="10월19일(토)"
                        app:fontType="condensed"
                        app:h="39" />

                    <com.m2comm.prs2019f.modules.customview.CustomView
                        android:id="@+id/bt2_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="1dp" />

                </com.m2comm.prs2019f.modules.customview.CustomView>

            </com.m2comm.prs2019f.modules.customview.CustomView>

            <com.m2comm.prs2019f.modules.customview.CustomWebview
                android:id="@+id/glance_webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <com.m2comm.prs2019f.modules.customview.CustomFrameLayout
                android:id="@+id/fragment_C_Bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                app:h="63" />


        </LinearLayout>


            <com.m2comm.prs2019f.modules.customview.CustomView
                android:id="@+id/default_clickV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#BF000000"
                android:orientation="vertical"
                >

                <com.m2comm.prs2019f.modules.customview.CustomView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:h="180"
                    />

                <com.m2comm.prs2019f.modules.customview.CustomImgView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:img="@drawable/ico_click"
                    app:imgW="100"
                    app:imgH="130"
                    app:h="200"
                    />

                <com.m2comm.prs2019f.modules.customview.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="세션을 터치하시면 세부 내용을 확인 할 수 있습니다.\n확대 / 축소 가능합니다."
                    app:fontType="condensed"
                    app:fontSize="16"
                    app:h="60"
                    android:gravity="center"
                    />

            </com.m2comm.prs2019f.modules.customview.CustomView>

        </com.m2comm.prs2019f.modules.customview.CustomFrameLayout>



    </android.support.constraint.ConstraintLayout>

</layout>