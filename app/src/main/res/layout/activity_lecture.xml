<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="Select"
            android:background="@drawable/quest_top"></TextView>

        <ImageView
            android:id="@+id/close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/b_close"></ImageView>

    </RelativeLayout>

    <com.m2comm.prs2019f.modules.common.AnimatedExpandableListView
        android:background="#ffffff"
        android:divider="#cfcfcf"
        android:dividerHeight="1dp"
        android:childDivider="#cfcfcf"
        android:groupIndicator="@null"
        android:id="@+id/menu_list"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="1dp">
    </com.m2comm.prs2019f.modules.common.AnimatedExpandableListView>

    <LinearLayout
        android:background="@drawable/lecture_bottom"
        android:layout_width="match_parent"
        android:layout_height="9dp"></LinearLayout>
</LinearLayout>